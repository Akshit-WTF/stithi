<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <style>
      .logo {
        display: block;
        width: 120px;
      }
      header {
        padding-top: 2rem;
      }
      .spacer {
        padding: 25px;
      }
      .system-status {
        background-color: #ffffff;
        padding: 10px;
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 25px;
        border-radius: 15px;
      }
      .operational {
        background: #56be8e;
        color: white;
      }
      .degraded {
        background: #dad263;
        color: rgb(0, 0, 0);
      }
      .ping-graph {
        height: 200px;
        margin-top: 20px;
      }
      .issues {
        padding-top: 6rem;
        margin-bottom: 6rem;
      }
      .action {
        font-weight: bold;
        color: rgb(54, 54, 54);
      }
      .align-right {
        text-align: right;
      }
      .graph-box {
        border-radius: 15px;
        padding: 10px;
        border: 1px solid rgb(138, 138, 138);
        margin: 0;
      }
      .btn {
        border: 1px solid #c777d1;
      }
      .btn:hover {
        background: #c777d1;
        color: white;
      }
      .service {
          border: 1px solid #000000;
          padding-bottom: 2px;
          margin-right: 2px;
          border-radius: 12px;
      }
      footer {
          padding-top: 5rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="row">
          <div class="col-md-6"><img class="logo" src="./logo.png" /></div>
          <div class="col-md-6 align-right">
            <p>
              Logged in as: <%= red.auth.user %> <br /><a href="/admin/newuser" class="btn"
                >New User</a
              >&nbsp;<a href="/admin/changepassword" class="btn">Change Password</a>
            </p>
          </div>
        </div>
      </header>
      <h1>Admin Panel</h1>
      <hr />
        <h3>Services</h3>
        <div class="row">
            <% services.forEach(service => { %>
            <div class="col-md-3 service">
                <h5 style="padding-top: 7px;"><a href="/admin/<%= service.name %>"><%= service.name %></a></h5> <p style="font-size: 1rem;">Latency: <%= service.ping %></p>
                <hr />
            </div>
            <% }) %>
          </div>
          <h3 style="padding-top: 1rem;">Issues</h3>
          <div class="row">
              <% issues.forEach(issue => { %>
                <% if (!issue.issues[0]) { %>
                    
                    <% } else { %>
              <div class="col-md-3 service">
                  <h5 style="padding-top: 7px;"><%= moment(issue.date).format("LL") %></h5>
                  <hr />
                  <% issue.issues.forEach(i => { %>
                  <a href="/admin/issue/<%= i.url %>"><%= i.name %></a> (<%= moment(i.actions[0].time).format("LT") %>)
                  <% }) %>
              </div>
              <% } %>
              <% }) %>
            </div>
      <footer>
        <div class="row">
          <div class="col-md-6 align-left"><a href="/admin/newservice" class="btn">New Service</a>&nbsp;<a href="/admin/newissue" class="btn">New Issue</a>&nbsp;<a href="https://github.com/akshit-wtf/aukaat" class="btn">GitHub</a></div>
          <div class="col-md-6 align-right">Powered By Aukaat</div>
        </div>
      </footer>
    </div>
  </body>
</html>
